<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/fragment_create_announcements_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/title" />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#ccc" />

        <AutoCompleteTextView
            android:id="@+id/fragment_create_announcements_category_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:maxLines="1"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_create_announcements_title_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/category" />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#ccc" />

        <EditText
            android:id="@+id/fragment_create_announcements_body_edit_text"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:background="@null"
            android:textColor="@color/black"
            android:padding="16dp"
            android:layout_weight="1"
            android:hint="@string/body"
            android:gravity="top" />

        <Button
            android:theme="@style/MHacksDialogColoredButton"
            android:id="@+id/fragment_create_announcements_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:enabled="false"
            android:text="@string/post"
            android:padding="8dp" />

    </LinearLayout>
</layout>